<resources>
    <!-- Base application theme. -->
    <style name="Theme.EshfeenyGraduationProject" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#D8D8D8</item>
        <item name="colorPrimaryVariant">@color/blue_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NoAppTheme" parent="android:style/Theme.Material">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@null</item>
        <item name="colorPrimaryVariant">@null</item>
        <item name="colorOnPrimary">@null</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@null</item>
        <item name="colorSecondaryVariant">@null</item>
        <item name="colorOnSecondary">@null</item>
        <item name="colorOnSecondaryContainer">@color/blue_main</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyBottomSheetDialog" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet</item>
    </style>
    
    <style name="defaultTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/cairo_regular</item>
    </style>

    <style name="CustomBottomNavigationTextAppearanceActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue_main</item>
        <!-- Add any other text appearance attributes you want to customize -->
    </style>
    <style name="CustomBottomNavigationTextAppearanceInActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_main</item>
        <!-- Add any other text appearance attributes you want to customize -->
    </style>
    
    <style name="bottomNavigationStyle">
        <item name="colorOnSurface">@color/blue_main</item>
        <item name="colorOnSecondaryContainer">@color/blue_main</item>
        <item name="colorSecondaryContainer">@android:color/transparent</item>
        <item name="compatShadowEnabled">true</item>
    </style>
</resources>