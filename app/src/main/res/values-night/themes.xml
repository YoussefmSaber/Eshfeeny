<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EshfeenyGraduationProject" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NoAppTheme" parent="android:style/Theme.Material">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@null</item>
        <item name="colorPrimaryVariant">@null</item>
        <item name="colorOnPrimary">@null</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@null</item>
        <item name="colorSecondaryVariant">@null</item>
        <item name="colorOnSecondary">@null</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyBottomSheetDialog" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet</item>
    </style>

    <style name="CustomBottomNavigationTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textSize">12sp</item>
        <!-- Add any other text appearance attributes you want to customize -->
    </style>
</resources>