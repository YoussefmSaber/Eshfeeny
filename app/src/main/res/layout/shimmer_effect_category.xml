<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tmpCartCard"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="12sp"
        app:cardBackgroundColor="@color/shimmer_load_color"
        app:cardCornerRadius="20sp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toStartOf="@id/tmpCategoryTitle"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tmpCategoryTitle"
        android:layout_width="96sp"
        android:layout_height="40sp"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="@color/shimmer_load_color"
        app:cardCornerRadius="8sp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toStartOf="@id/tmpBackBtn"
        app:layout_constraintStart_toEndOf="@id/tmpCartCard"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tmpBackBtn"
        android:layout_width="27sp"
        android:layout_height="40sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12sp"
        android:src="@drawable/exit_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tmpCategoryTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tempCategorySearch"
        android:layout_width="match_parent"
        android:layout_height="46sp"
        android:layout_marginHorizontal="16sp"
        android:layout_marginVertical="24sp"
        app:cardBackgroundColor="@color/shimmer_load_color"
        app:cardCornerRadius="24sp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tmpCategoryTitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tempCategorySearch">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="96sp"
            android:layout_height="32sp"
            android:layout_marginHorizontal="8sp"
            android:layout_marginVertical="16sp"
            app:cardBackgroundColor="@color/shimmer_load_color"
            app:cardCornerRadius="16sp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="96sp"
            android:layout_height="32sp"
            android:layout_marginHorizontal="8sp"
            android:layout_marginVertical="16sp"
            app:cardBackgroundColor="@color/shimmer_load_color"
            app:cardCornerRadius="16sp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="96sp"
            android:layout_height="32sp"
            android:layout_marginHorizontal="8sp"
            android:layout_marginVertical="16sp"
            app:cardBackgroundColor="@color/shimmer_load_color"
            app:cardCornerRadius="16sp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="96sp"
            android:layout_height="32sp"
            android:layout_marginHorizontal="8sp"
            android:layout_marginVertical="16sp"
            app:cardBackgroundColor="@color/shimmer_load_color"
            app:cardCornerRadius="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>