<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#CCE6FF"
        android:elevation="0dp"
        app:cardElevation="0dp"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="8sp"
        android:layoutDirection="rtl"
        android:stateListAnimator="@null"
        app:cardCornerRadius="10sp"
        app:strokeColor="#e7e7e7"
        app:strokeWidth="1.4dp">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/heart_icon_id"
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:srcCompat="@drawable/favorite_notfill" />

            <ImageView
                android:id="@+id/imgV_medicine_id"
                android:layout_width="130sp"
                android:layout_height="130sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="32sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="32sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/heart_icon_id"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/medicine_name_id_tv"
                android:layout_width="match_parent"
                android:layout_height="45sp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="8dp"
                android:maxWidth="170sp"
                android:gravity="fill_vertical"
                android:maxHeight="45sp"
                android:fontFamily="@font/cairo_semibold"
                android:text="| 75 كريم فازلين للعناية المكثفة باليدين والأظافر بالكيراتين 75 ملي"
                android:textColor="#1F1F1F"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgV_medicine_id"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/price_medicine_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:layout_marginBottom="8sp"
                android:fontFamily="@font/cairo_semibold"
                android:text="TextView"
                android:textColor="#0583F2"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/medicine_name_id_tv"
                app:layout_constraintTop_toBottomOf="@id/medicine_name_id_tv" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add2CartBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8sp"
                android:backgroundTint="#F99D1C"
                android:fontFamily="@font/cairo_semibold"
                android:stateListAnimator="@null"
                android:text="أضف الى العربة"
                android:textColor="@color/white"
                android:visibility="visible"
                app:cornerRadius="8sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/price_medicine_id_tv"
                tools:ignore="TouchTargetSizeCheck" />


            <LinearLayout
                android:id="@+id/cardFunctionalityLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginVertical="10sp"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/increase_btn_id"
                    android:layout_width="28sp"
                    android:layout_height="28sp"
                    app:cardCornerRadius="5sp"
                    android:layout_margin="8sp"
                    app:cardBackgroundColor="#FFE5CC"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/plus_icon" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_cnt_add_item_id"
                    android:layout_width="60sp"
                    app:cardCornerRadius="5sp"
                    android:layout_height="28sp"
                    app:cardBackgroundColor="@color/light_blue"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/productAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/cairo_medium"
                        android:text="1"
                        android:textColor="@color/blue_main" />
                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/decrease_btn_id"
                    android:layout_width="28sp"
                    android:layout_height="28sp"
                    app:cardCornerRadius="5sp"
                    android:layout_margin="8sp"
                    app:cardBackgroundColor="#E5E5E5"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/minus_icon" />

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

