<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tempCart"
            android:layout_width="46sp"
            android:layout_height="46sp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/shimmer_load_color"
            app:cardCornerRadius="23sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tempTitle"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="0dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tempTitle"
            android:layout_width="128sp"
            android:layout_height="46sp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/shimmer_load_color"
            app:cardCornerRadius="23sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tempBackButton"
            app:layout_constraintStart_toEndOf="@id/tempCart"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="0dp" />

        <ImageView
            android:id="@+id/tempBackButton"
            android:layout_width="27sp"
            android:layout_height="27sp"
            android:src="@drawable/exit_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tempTitle"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="46sp"
        android:layout_marginHorizontal="16sp"
        android:layout_marginVertical="8sp"
        app:cardBackgroundColor="@color/shimmer_load_color"
        app:cardCornerRadius="23sp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="96sp"
            android:layout_height="32sp"
            android:layout_marginHorizontal="8sp"
            android:layout_marginVertical="16sp"
            app:cardBackgroundColor="@color/shimmer_load_color"
            app:cardCornerRadius="16sp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="96sp"
            android:layout_height="32sp"
            android:layout_marginHorizontal="8sp"
            android:layout_marginVertical="16sp"
            app:cardBackgroundColor="@color/shimmer_load_color"
            app:cardCornerRadius="16sp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="96sp"
            android:layout_height="32sp"
            android:layout_marginHorizontal="8sp"
            android:layout_marginVertical="16sp"
            app:cardBackgroundColor="@color/shimmer_load_color"
            app:cardCornerRadius="16sp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="96sp"
            android:layout_height="32sp"
            android:layout_marginHorizontal="8sp"
            android:layout_marginVertical="16sp"
            app:cardBackgroundColor="@color/shimmer_load_color"
            app:cardCornerRadius="16sp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="96sp"
            android:layout_height="32sp"
            android:layout_marginHorizontal="8sp"
            android:layout_marginVertical="16sp"
            app:cardBackgroundColor="@color/shimmer_load_color"
            app:cardCornerRadius="16sp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp" />
    </LinearLayout>

    <include layout="@layout/shimmer_effect_item" />

</LinearLayout>