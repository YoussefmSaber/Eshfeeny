<resources>
    <!-- Base application theme. -->
    <style name="Theme.EshfeenyGraduationProject" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#D8D8D8</item>
        <item name="colorPrimaryVariant">@color/blue_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorOnSecondaryContainer">@color/blue_main</item>
        <item name="colorOnSurface">@color/blue_main</item>

        <!-- Customize your theme here. -->
        <item name="cornerRadius">20sp</item>
        <item name="chipCornerRadius">50sp</item>
    </style>

    <style name="MyBottomSheetDialog" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chips_text_color</item>
    </style>

    <style name="CustomBottomNavigationTextAppearanceActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue_main</item>
        <!-- Add any other text appearance attributes you want to customize -->
    </style>

    <style name="CustomBottomNavigationTextAppearanceInActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_main</item>
        <!-- Add any other text appearance attributes you want to customize -->
    </style>

    <style name="EditTextTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/blue_main</item>
        <item name="colorPrimaryVariant">@color/blue_main</item>
    </style>

    <style name="DropDownItemTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="colorPrimary">@color/blue_main</item>
        <item name="colorPrimaryVariant">@color/blue_main</item>
    </style>

    <style name="tabItemStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="colorPrimary">@color/blue_main</item>
        <item name="android:fontFamily">@font/cairo_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>